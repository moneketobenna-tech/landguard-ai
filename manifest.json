{
  "name": "LandGuard AI - Property Scam Detector",
  "description": "Protect yourself from land and property scams. AI-powered risk analysis for real estate listings.",
  "version": "1.0.0",
  "manifest_version": 3,

  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "LandGuard AI v1.0",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "*://*.facebook.com/*",
    "*://*.kijiji.ca/*",
    "*://*.craigslist.org/*"
  ],

  "background": {
    "service_worker": "src/background/background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/marketplace/*",
        "*://*.kijiji.ca/*",
        "*://*.craigslist.org/*"
      ],
      "js": ["src/content/content.js"],
      "css": ["src/content/content.css"],
      "run_at": "document_idle"
    }
  ],

  "options_page": "src/options/options.html",

  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
